<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewBeaconID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beacon ID: "/>

    <TextView
        android:id="@+id/textViewBeaconName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Beacon Name: " />

    <TextView
        android:id="@+id/textViewTextLocation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Location: " />

    <TextView
        android:id="@+id/textViewTextPaths"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Paths: " />

    <TextView
        android:id="@+id/textViewTableName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Floor: " />







    <!-- Additional TextViews for other details like name, location, etc. -->
</LinearLayout>
