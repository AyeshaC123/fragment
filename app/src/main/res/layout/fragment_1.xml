<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <EditText
        android:id="@+id/editTextPageName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="16dp"
        android:hint="Enter page name" />

    <!-- Button to navigate, centered horizontally, placed below the EditText -->
    <Button
        android:id="@+id/buttonNavigate"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/editTextPageName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:text="Search" />

    <!-- Info Button, aligned at the bottom and centered horizontally -->
    <Button
        android:id="@+id/info_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:text="Info" />

</RelativeLayout>

